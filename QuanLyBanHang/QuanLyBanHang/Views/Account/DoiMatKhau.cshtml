
@{
    ViewBag.Title = "DoiMatKhau";
    Layout = "~/Views/Shared/_LayoutMain.cshtml";
}

<h2>Đổi mật khẩu</h2>
<div class="col-md-12" style="height:auto;">
    @if (ViewBag.doithanhcong == null)
    {
        using (Html.BeginForm("DoiMatKhau", "Account"))
        {
    <div class="form-horizontal">
        <div class="form-group col-md-12">
            Mật khẩu cũ:
            <input class="col-md-6 form-control" type="text" name="mkcu" />
        </div>
        <div class="form-group col-md-12">
            Mật khẩu mới:
            <input class="col-md-6 form-control" type="text" name="mkmoi" />
        </div>
        <div class="form-group col-md-12">
            <input type="submit" value="Đồng ý" />
            <input type="reset" value="Hủy" />
        </div>
        <p><i>@ViewBag.thatbai</i></p>
    </div>
        }
    }
    else
    {
        <p><i>@ViewBag.doithanhcong</i></p>
        <a href="@Url.Action("Index","Products")">Tiếp tục truy cập vào trang web</a>
    }
</div>

