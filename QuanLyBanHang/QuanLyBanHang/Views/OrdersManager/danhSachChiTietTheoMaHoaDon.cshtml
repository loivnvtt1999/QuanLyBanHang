@model IEnumerable<Table.OrderDetail>

@{
    ViewBag.Title = "danhSachChiTietTheoMaHoaDon";
}

<h2>Chi tiết hóa đơn</h2>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.GetOrder.Freight)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.GetProduct.ProductName)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.UnitPrice)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Quantity)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.GetOrder.Freight)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.GetProduct.ProductName)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.UnitPrice)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Quantity)
        </td>
    </tr>
}

</table>
