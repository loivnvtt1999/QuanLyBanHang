<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>@ViewBag.Title</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
    <script src="~/Scripts/jquery.unobtrusive-ajax.min.js"></script>
</head>
<body>
    <div class="main" style="width:100%; height:100%; background-color:cornflowerblue;">
        <div class="container body-content" style="background-color:white; border:1px solid;">
            <div class="col-md-12">
                <div class="col-md-5">
                    <div class="col-md-12" style="height:auto; border: 1px solid; background-color:aquamarine">
                        <div style="width:100%; height:50px; border:1px solid;">
                            <img style="width:40px; height:40px; float:left;" src="~/Image/icon.png" />
                            <b><a href="#" style="padding:50px;">Trang chủ</a></b>
                        </div>
                        <div style="width:100%; height:50px; border:1px solid;">
                            <img style="width:40px; height:40px; float:left;" src="~/Image/icon.png" />
                            <b><a href="#" style="padding:50px;">Giới thiệu</a></b>
                        </div>
                        <div style="width:100%; height:50px; border:1px solid;">
                            <img style="width:40px; height:40px; float:left;" src="~/Image/icon.png" />
                            <b><a href="#" style="padding-left:50px;">Liên hệ</a></b>
                        </div>
                        <div style="width:100%; height:50px; border:1px solid;">
                            <img style="width:40px; height:40px; float:left;" src="~/Image/icon.png" />
                            <b><a href="#" style="padding-left:50px;">Dịch vụ</a></b>
                        </div>
                        <div style="width:100%; height:50px; border:1px solid;">
                            <img style="width:40px; height:40px; float:left;" src="~/Image/icon.png" />
                            <b><a href="#" style="padding-left:50px;">Hỗ trợ</a></b>
                        </div>
                        <div style="width:100%; height:50px; border:1px solid;">
                            <img style="width:40px; height:40px; float:left;" src="~/Image/icon.png" />
                            <b><a href="#" style="padding-left:50px;">Phản hồi thông tin</a></b>
                        </div>
                        <div style="width:100%; height:50px; border:1px solid;">
                            <img style="width:40px; height:40px; float:left;" src="~/Image/icon.png" />
                            <b><a href="#" style="padding-left:50px;">Cung cấp tốt nhất</a></b>
                        </div>
                        <div style="width:100%; height:50px; border:1px solid;">
                            <img style="width:40px; height:40px; float:left;" src="~/Image/icon.png" />
                            <b><a href="#" style="padding-left:50px;">Hỗ trợ liên kết</a></b>
                        </div>
                    </div>
                    <div class="col-md-12" style="height:auto; border: 1px solid;">
                        @Html.Action("loaiSanPhamPart", "Categories")
                    </div>
                </div>
                <div class="col-md-7">
                    <div class="col-md-12" style="height:200px; border: 1px solid;">
                        <img src="~/Image/banner.jpg" style="height:100%; width:100%;" />
                    </div>
                    <div class="col-md-12" style="height:auto; border:1px solid">
                        <div class="col-md-6" style="border: 1px solid; border-radius:3%; height:auto;">
                            @if (Session["login"] == null)
                            {
                                using (Html.BeginForm("DangNhap", "Account"))
                                {
                                    <div class="form-horizontal">
                                        <div class="form-group col-md-12">
                                            Tên đăng nhập:
                                            <input class="col-md-6 form-control" type="text" name="UserName" />
                                        </div>
                                        <div class="form-group col-md-12">
                                            Mật khẩu:
                                            <input class="col-md-6 form-control" type="text" name="Password" />
                                        </div>
                                        <div class="form-group col-md-12">
                                            <input type="submit" value="Đăng nhập" />
                                        </div>
                                    </div>
                                }
                                <h7><i>@Session["faillogin"]</i></h7>
                            }
                            else
                            {
                                <ul style="list-style-type:none">
                                    <li style="width:180px; height:auto;">
                                        <h5>Xin chào: @Session["login"]</h5>
                                    </li>
                                    <li style="width:70px; height:auto;">
                                        <a style="text-decoration:none;" href="@Url.Action("DangXuat","Account")">Đăng xuất</a>
                                    </li>
                                    <li style="width:100px; height:auto;">
                                        <a style="text-decoration:none;" href="@Url.Action("DoiMatKhau","Account")">Đổi mật khẩu</a>
                                    </li>
                                </ul>
                            }
                        </div>
                        <div class="col-md-6" style="height:auto; background-color:orange">
                            <div class="col-md-12" style="height:auto;">
                                <ul style="list-style-type:none">
                                    <li style="width:70px; height:50px; float:left;">
                                        <a style="text-decoration:none;" href="@Url.Action("Index","Products")">Sản phẩm</a>
                                    </li>
                                    @if (@Session["login"] == null)
                                    {
                                        <li style="width:70px; height:50px; float:left;">
                                            <a style="text-decoration:none;" href="@Url.Action("DangKy","Account")">Đăng ký</a>
                                        </li>
                                    }
                                </ul>
                            </div>
                            <hr />
                            @*@using (Html.BeginForm("TimKiem","Products"))
                                {
                                    <label>Tìm kiếm:</label>
                                    <input type="text" name="ProductName" style="width:130px;" />
                                    <input class="btn btn-info" type="submit" value="Tìm" />
                                }*@
                            @*@using (Ajax.BeginForm("TimKiem", "Products", new AjaxOptions { HttpMethod = "Post", UpdateTargetId = "MainContent", InsertionMode = InsertionMode.InsertAfter, LoadingElementId = "divLoading" }))
                            {
                                <label>Tìm kiếm:</label>
                                <input type="text" name="ProductName" style="width:130px;" />
                                <input class="btn btn-info" type="submit" value="Tìm" />
                            }*@
                            @if (@Session["sai"] != null)
                            {
                                <span>@Session["sai"]</span>
                            }
                            @if (@Session["sai"] != null)
                            {

                            }
                            @if (@Session["soluong"] == null)
                            {
                                <a href="@Url.Action("Index","GioHang")">Giỏ hàng(0)</a>
                            }
                            else
                            {
                                <a href="@Url.Action("Index","GioHang")">Giỏ hàng(@Session["soluong"])</a>
                            }
                        </div>
                    </div>
                    <div id="divLoading" class="col-md-12" style="width:auto; height:auto; text-align:center; display:none;">
                        <img src="~/Image/loading.gif" />
                    </div>
                    <div id="MainContent" class="col-md-12" style="border:1px solid; height:auto;">
                        @RenderBody()
                    </div>
                </div>
            </div>
        </div>
    </div>
</body>
</html>
